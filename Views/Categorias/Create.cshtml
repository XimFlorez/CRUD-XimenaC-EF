@model CRUDXimenaCastanedaEF.Models.Categoria

@{
    ViewData["Title"] = "Crear Categoría";
}

<h1 class="text-center mb-4">Crear Nueva Categoría</h1>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="CodigoCategoria" class="form-label fw-bold">Código de Categoría</label>
                <input asp-for="CodigoCategoria" class="form-control" placeholder="Ingrese el código de la categoría" />
                <span asp-validation-for="CodigoCategoria" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Nombre" class="form-label fw-bold">Nombre</label>
                <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre de la categoría" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
