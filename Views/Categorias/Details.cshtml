@model CRUDXimenaCastanedaEF.Models.Categoria

@{
    ViewData["Title"] = "Detalles de la Categoría";
}

<h1 class="text-center mb-4">Detalles de la Categoría</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg">
                Información de la Categoría
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4 fw-bold">Nombre</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>
                </dl>
            </div>
        </div>
        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Edit" asp-route-id="@Model?.CodigoCategoria" class="btn editar">Editar</a>
            <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
        </div>
    </div>
</div>
