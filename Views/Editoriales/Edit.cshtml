@model CRUDXimenaCastanedaEF.Models.Editoriale

@{
    ViewData["Title"] = "Editar Editorial";
}

<h1 class="text-center mb-4">Editar Editorial</h1>

<div class="row justify-content-center">
    <div class="col-md-8">
        <form asp-action="Edit" class="needs-validation formEdicion" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <input type="hidden" asp-for="Nit" />

            <div class="mb-3">
                <label asp-for="Nombre" class="form-label fw-bold">Nombre</label>
                <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre de la editorial" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Telefono" class="form-label fw-bold">Teléfono</label>
                <input asp-for="Telefono" class="form-control" placeholder="Ingrese el teléfono de la editorial" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Direccion" class="form-label fw-bold">Dirección</label>
                <input asp-for="Direccion" class="form-control" placeholder="Ingrese la dirección de la editorial" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-bold">Correo Electrónico</label>
                <input asp-for="Email" class="form-control" placeholder="Ingrese el correo electrónico de la editorial" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Sitioweb" class="form-label fw-bold">Sitio Web</label>
                <input asp-for="Sitioweb" class="form-control" placeholder="Ingrese el sitio web de la editorial" />
                <span asp-validation-for="Sitioweb" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
                <button type="submit" class="btn btn-primary">Guardar Cambios</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
