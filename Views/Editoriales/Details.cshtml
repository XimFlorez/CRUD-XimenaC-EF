@model CRUDXimenaCastanedaEF.Models.Editoriale

@{
    ViewData["Title"] = "Detalles de la Editorial";
}

<h1 class="text-center mb-4">Detalles de la Editorial</h1>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg">
                Información de la Editorial
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4 fw-bold">Nombre</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

                    <dt class="col-sm-4 fw-bold">Teléfono</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Telefono)</dd>

                    <dt class="col-sm-4 fw-bold">Dirección</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Direccion)</dd>

                    <dt class="col-sm-4 fw-bold">Correo Electrónico</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                    <dt class="col-sm-4 fw-bold">Sitio Web</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Sitioweb)</dd>
                </dl>
            </div>
        </div>
        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Edit" asp-route-id="@Model?.Nit" class="btn editar">Editar</a>
            <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
        </div>
    </div>
</div>
