@model CRUDXimenaCastanedaEF.Models.Libro

@{
    ViewData["Title"] = "Editar Libro";
}

<h1 class="text-center mb-4">Editar Libro</h1>

<div class="row justify-content-center">
    <div class="col-md-8">
        <form asp-action="Edit" class="needs-validation formEdicion" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <input type="hidden" asp-for="Isbn" />

            <div class="mb-3">
                <label asp-for="Titulo" class="form-label fw-bold">Título</label>
                <input asp-for="Titulo" class="form-control" placeholder="Ingrese el título del libro" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Descripcion" class="form-label fw-bold">Descripción</label>
                <input asp-for="Descripcion" class="form-control" placeholder="Ingrese la descripción del libro" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NombreAutor" class="form-label fw-bold">Nombre del Autor</label>
                <input asp-for="NombreAutor" class="form-control" placeholder="Ingrese el nombre del autor" />
                <span asp-validation-for="NombreAutor" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Publicacion" class="form-label fw-bold">Publicación</label>
                <input asp-for="Publicacion" class="form-control" placeholder="Ingrese el año de publicación" />
                <span asp-validation-for="Publicacion" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FechaRegistro" class="form-label fw-bold">Fecha de Registro</label>
                <input asp-for="FechaRegistro" class="form-control" placeholder="Ingrese la fecha de registro" />
                <span asp-validation-for="FechaRegistro" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CodigoCategoria" class="form-label fw-bold">Categoría</label>
                <select asp-for="CodigoCategoria" class="form-control" asp-items="ViewBag.CodigoCategoria"></select>
                <span asp-validation-for="CodigoCategoria" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NitEditorial" class="form-label fw-bold">Editorial</label>
                <select asp-for="NitEditorial" class="form-control" asp-items="ViewBag.NitEditorial"></select>
                <span asp-validation-for="NitEditorial" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
                <button type="submit" class="btn btn-primary">Guardar Cambios</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
