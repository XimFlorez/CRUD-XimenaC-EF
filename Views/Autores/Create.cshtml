@model CRUDXimenaCastanedaEF.Models.Autore

@{
    ViewData["Title"] = "Crear Autor";
}

<h1 class="text-center mb-4">Crear Nuevo Autor</h1>


    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Create" class="needs-validation formEdicion" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label fw-bold">Nombre</label>
                    <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre del autor" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Apellido" class="form-label fw-bold">Apellido</label>
                    <input asp-for="Apellido" class="form-control" placeholder="Ingrese el apellido del autor" />
                    <span asp-validation-for="Apellido" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Telefono" class="form-label fw-bold">Teléfono</label>
                    <input asp-for="Telefono" class="form-control" placeholder="Ingrese el teléfono del autor" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Direccion" class="form-label fw-bold">Dirección</label>
                    <input asp-for="Direccion" class="form-control" placeholder="Ingrese la dirección del autor" />
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold">Correo Electrónico</label>
                    <input asp-for="Email" class="form-control" placeholder="Ingrese el correo electrónico del autor" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
                    <button type="submit" class="btn btn-primary">Crear</button>
                </div>
            </form>
        </div>
    </div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
